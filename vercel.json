{
  "version": 2,
  "builds": [
    {
      "src": "apps/api/src/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "apps/web/",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "pnpm build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/api/src/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/web/$1"
    }
  ]
}
