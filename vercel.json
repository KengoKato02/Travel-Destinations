{
  "version": 2,
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "pnpm build",
        "distDir": "apps/web/dist"
      }
    },
    {
      "src": "apps/api/src/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/api/(.*)",
      "dest": "apps/api/src/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "apps/web/dist/$1"
    }
  ]
}
