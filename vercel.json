{
  "version": 2,
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "apps/api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/apps/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/web/dist/$1"
    },
    {
      "handle": "filesystem"
    }
  ]
}
